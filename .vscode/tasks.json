{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "main.cpp",
                "-o",
                "main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "cmd", // Untuk Windows, gunakan "cmd". Untuk Linux/MacOS, gunakan "bash"
            "args": [
                "/c", // Untuk Windows, gunakan "/c". Untuk Linux/MacOS, gunakan "-c"
                "start", // Untuk Windows, gunakan "start". Untuk Linux, gunakan "xterm -e" (pastikan xterm terinstal). Untuk MacOS, gunakan "open -a Terminal"
                "main.exe" // Nama executable Anda
            ],
            "dependsOn": "build",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}